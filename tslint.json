{
	"defaultSeverity": "warning",
	"extends": ["tslint:latest", "tslint-config-prettier"],
	"rulesDirectory": ["node_modules/codelyzer"],
	"rules": {
		// Angular
		"no-output-on-prefix": true,
		"use-input-property-decorator": true,
		"use-output-property-decorator": true,
		"use-host-property-decorator": true,
		"no-input-rename": true,
		"no-output-rename": true,
		"use-life-cycle-interface": true,
		"use-pipe-transform-interface": true,
		"component-class-suffix": [true, "Component", "Page"],
		"directive-class-suffix": true,
		"directive-selector": [true, "attribute", "app", "camelCase"],
		"component-selector": [true, "element", ["app", "auth", "todo"], "kebab-case"],

		// Other
		"await-promise": true,
		"no-floating-promises": true,
		"deprecation": { "severity": "warn" },
		"quotemark": [true, "single", "avoid-escape", "avoid-template"],
		"ban-types": [true, ["Object"], ["String"], ["Number"], ["Boolean"]],
		"array-type": [true, "array"],
		"interface-name": [true, "never-prefix"],
		"object-literal-sort-keys": false,
		"radix": false,
		"ordered-imports": false,
		"prefer-function-over-method": [true, "allow-public"],
		"prefer-template": true,
		"file-name-casing": [true, "kebab-case"],
		"use-isnan": true,
		"curly": [true, "ignore-same-line"],
		"jsdoc-format": false,
		"no-redundant-jsdoc": true,
		"no-boolean-literal-compare": true,
		"no-console": false,
		"no-this-assignment": [true, { "allow-destructuring": true }],
		"no-import-side-effect": false,
		"no-implicit-dependencies": false,
		"no-submodule-imports": false,
		"import-blacklist": [true, "rxjs/Rx"],
		"label-position": true,
		"member-access": [true, "no-public"],
		"member-ordering": [true, { "order": ["static-field", "instance-field", "static-method", "instance-method"] }],
		"no-empty": false,
		"no-empty-interface": true,
		"no-inferrable-types": [true, "ignore-params"],
		"no-misused-new": true,
		"no-non-null-assertion": true,
		"no-string-literal": false,
		"no-switch-case-fall-through": true,
		"no-use-before-declare": false,
		"unified-signatures": true,
		"variable-name": false,
		"max-classes-per-file": false
	}
}
